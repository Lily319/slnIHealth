@using X.PagedList;
@model IPagedList<prjIHealth.Models.TMember>
@{ ViewData["Title"] = "iHeath後臺";
    Layout = "~/Areas/Admin/Admin_Layout.cshtml"; }
@{
    ViewData["Title"] = "Index";
