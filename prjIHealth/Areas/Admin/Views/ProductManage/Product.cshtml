@{
    ViewData["Title"] = "Product";
    Layout = "~/Areas/Admin/Admin_Layout.cshtml";
}

<h1>商品清單</h1>

@section Styles{
    <style>
        #title {
            font-weight: 800;
            color: #599e32;
            margin-left: 20vw;
            margin-right: 20vw;
        }
    </style>
}
<h2 id="title">產品管理</h2>

<hr />
<section class="product spad">
