                        會員ID之後應改用session傳遞
                    *@
                    <div id="AddFStatusNumber"></div>
                    <div id="AddFReplyType"></div>
                    <input type="hidden" value=@DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss") name="FReplyTime" id="FReplyTime" />
                    <input type="hidden" value=1 name="FReplierId" id="FReplierId" />
                    <input type="hidden" value=@Html.DisplayFor(modelItem => item.FProblemId) name="FProblemId" id="FProblemId" />
                    <div class="col-lg-12 text-center">
                        <input type="submit" value="回覆儲存" class="site-btn" style="float: right; margin-top: 20px" />

                        <input type="button" value="讀取附件" class="site-btn" style="float: right; margin-right: 10px; margin-top: 20px" />

                        <input type="button" value="DEMO" class="site-btn" style="float: right; margin-right: 10px;margin-top:20px" />
                    </div>
                </form>
            </div>

        </div>
        <div class="blog__item__text">
            <a asp-action="ProblemReplyList" class="blog__btn">返回問題回覆<span class="arrow_right"></span></a>
        </div>
