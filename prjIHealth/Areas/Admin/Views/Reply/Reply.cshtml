                    </div>
                    <div class="form-group">
                        <label class="control-label">類別</label>
                        <input class="form-control" readonly="readonly" value="@Html.DisplayFor(modelItem => item.FProblemCategory.FProblemCategory)" />
                        @*<span asp-validation-for="FProblemCategoryId" class="text-danger"></span>*@
                    </div>

                    @*<div class="form-group">
                            <label asp-for="FFilePath" class="control-label"></label>
                            <input asp-for="FFilePath" class="form-control" />
                            <span asp-validation-for="FFilePath" class="text-danger"></span>
