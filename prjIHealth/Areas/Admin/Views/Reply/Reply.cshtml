    {
        <div class="row">

            <div class="col-4" id="divLeft">
                <form asp-action="Reply">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-group">
                            <label asp-for="FProblemId" class="control-label"></label>
                            <input asp-for="FProblemId" class="form-control" />
                            <span asp-validation-for="FProblemId" class="text-danger"></span>
