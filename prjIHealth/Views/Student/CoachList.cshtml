@model IEnumerable<prjIHealth.Models.TCoach>
@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    .divSearch {
        display: flex;
        justify-content: center;
        padding: 0px 20px;
    }

    .divSelCity {
        padding-left: 10px;
        text-align: right;
    }

        .divSelCity > div {
            width: 180px;
        }
    .divKeyword {
        display: flex;
    }

    .divSubmit {
        height: 38px;
        padding: 0px;
        margin: 0px;
        text-align: center;
    }
    .hero__search__form, .divCoachList {
        width: 100%;
    }       
    .filter{
        margin:30px 0px;
    }    
    .divCoachCount {
        text-align: right;
    }
    .divCoachCard {
        display: flex;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
        border: 2px solid lightgray;
        box-shadow: 2px 2px 5px lightgray;
    }
    .imgCoach {
        border-radius: 10px;
        border: 3px solid white;
        width: 180px;
        height: 200px;
        transition: .3s;
    }
        .imgCoach:hover {            
            border: 3px solid gray;
        }
    .divCoachInfo{
        padding:20px;
    }
    .imgIcon {
        height: 20px;
    }
    .li{
        margin:5px 0px;
    }
    .liCoachName {
        margin-bottom: 10px;
    }
    .liSlogan{
        margin-top:18px;
    }    
    .divPage{
        text-align:right;
    }
    .btn-success {
        background-color: #7fad39;
        border:none;
    }
    .btn-light {
        background-color: #4F6C24;
        color: white;
    }
        .btn-light:hover {
            background-color: #304115;
            color: white;
        }
    .ulCategory li{
        padding-right:80px;
    }
        .ulCategory li a {
            color: #585A55 !important;
            transition: .2s;
        }
            .ulCategory li a:hover {
                background-color: #ECF1E4;
                color: black !important;
            }
    .inKeyword {
        border-bottom-right-radius: 0px;
        border-top-right-radius: 0px;
    }

    .btnSearch {
        height: 38px;
        border-bottom-left-radius: 0px;
        border-top-left-radius: 0px;
    }
</style>
}

