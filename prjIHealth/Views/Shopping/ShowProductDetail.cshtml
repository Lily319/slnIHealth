        })
        async function addTrack(id) {
                    url = "@Url.Content("~/Shopping/AddToTrack/")" + id;
                    let response = await fetch(url);
                    let datas = await response.json();
                    console.log(datas);
                    $("#fa-heart").children("span").text(datas);
