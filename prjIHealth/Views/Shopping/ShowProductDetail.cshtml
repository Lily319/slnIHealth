        //js轉換數字為千分位型態方法
        function toCurrency(num) {
            var parts = num.toString().split('.');
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ',');
            return parts.join('.');
        }

        //加入追蹤清單
        $("#addToTrack").click(function (event) {
            event.preventDefault();
            id = $(this).attr("data-id");
            if (loginId== 0) {
