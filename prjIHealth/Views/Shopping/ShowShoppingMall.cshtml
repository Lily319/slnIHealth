@section Scripts{
    <script>

        //顯示商品
        function AllProducts(url) {
            $.get(url, function (datas) {
                let htmlShowProduct = "";
                $.each(datas, function (idx, product) {
                    htmlShowProduct += `<div class="col-lg-4 col-md-6 col-sm-6" ><div id="header" style="cursor:pointer;">
                                <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/img/prjproduct/${product.fCoverImage}">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#" data-id="${product.fProductId}" class="addToTrack"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#" data-id="${product.fProductId}" class="addToCart"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6 id="showProductDetail" data-id="${product.fProductId}">${product.fProductName}</h6>
                                    <h5>$${product.fUnitprice}</h5>
                                </div>
                            </div>
                            </div></div>`
                })
                $("#showProduct").html(htmlShowProduct);
            })
        }

        //以價格排序
        function asc(id) {
            let url = "@Url.Content("~/Shopping/AscProduct/")" + id;
            AllProducts(url);
            $(".sort").text("按價格排序↑");
            $(".sort").removeClass("sort-asc");
            $(".sort").addClass("sort-desc");
            $(".sort").unbind('click');
            $(".sort-desc").on('click', desc);
        }
        function desc(id) {
            let url = "@Url.Content("~/Shopping/DescProduct/")" +id;
            AllProducts(url);
            $(".sort").text("按價格排序↓");
            $(".sort").removeClass("sort-desc");
            $(".sort").addClass("sort-asc");
            $(".sort").unbind('click');
            $(".sort-asc").on('click',asc)
        }

        //在商城主頁執行所有function
        function showProduct() {
            let firstURL = "@Url.Content("~/Shopping/ShowProduct")";
            AllProducts(firstURL);

                //按品名會彈出相對應商品明細
                $("#showProduct").delegate("#showProductDetail", "click", function () {
                    id = $(this).attr("data-id");
                    location.href = `/Shopping/ShowProductDetail/${id}`;
                    showProductDetail(id);
                })
                async function showProductDetail(id) {
                    //TODO
                    var data = {};
                    data.FProductId = id;
                    data.FProductName = 1;
                    $.ajax({ type: "POST", url: "@Url.Action("ShowProductDetail")",data:data });
                }

                //按心心會加入追蹤清單
                $("#showProduct").delegate(".addToTrack", "click", function (event) {
                    event.preventDefault();
                    id = $(this).attr("data-id");
                    addTrack(id);
                    alert("已成功加入追蹤清單");
                    console.log("text");
                })
                async function addTrack(id) {
                    url = "@Url.Content("~/Shopping/AddToTrack/")" + id;
                    let response = await fetch(url);
                    let datas = await response.json();
                    console.log(datas);
                }

                //按購物車會加入到購物車
                $("#showProduct").delegate(".addToCart", "click", function (event) {
                    event.preventDefault();
                    id = $(this).attr("data-id");
                    addCart(id);
                    alert("已成功加入購物車");
                    console.log("text");
                })
                async function addCart(id) {
                    //TODO
                    var data = {};
                    data.txtFid = id;
                    data.txtCount = 1;
                    $.ajax({ type: "POST", url: "@Url.Action("ShowProductDetail")",data:data });
                }

                //以類別搜產品
                $("#showByCatergory").find("a").click(function (event) {
                    event.preventDefault();
                    id = $(this).attr("data-id");
                    console.log(this);
                    console.log(id);
                    showProductByCategory(id);

                     //TODO 商品以類別+價格排序
                    $(".sort-asc").click(function () {
                        asc(id);
                    })
                    $(".sort-desc").click(function () {
                        desc(id);
                    })
                })
                function showProductByCategory(id) {
                    let url = "@Url.Content("~/Shopping/ShowProduct/")" + id;
                    if (id == 0) {
                        url = "@Url.Content("~/Shopping/ShowProduct")";
                    }
                    AllProducts(url);
                }

                //以輸入文字搜產品
                $("#btnSearch").click(searchProductByKeyword);
                function searchProductByKeyword() {
                    let keyword = $("#txtKeyword").val();
                    let url = "@Url.Content("~/Shopping/SearchProduct")" + `?keyword=${keyword}`;
                    //console.log(url);
                    AllProducts(url);
                }

                //所有商品排序
                $(".sort-asc").click(function () {
                    asc();
                })

                $(".sort-desc").click(function () {
                    desc();
                })
        }
        showProduct();
    </script>
}

