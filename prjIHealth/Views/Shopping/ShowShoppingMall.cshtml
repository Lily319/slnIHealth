                                              //pro.FUnitprice
                                          }
                                             into g
                                          select new
                                          {
                                              Key = g.Key,
                                              Count = g.Sum(od => od.FQuantity)

                                          }).OrderByDescending(p => p.Key).Take(3).ToList();
