@*彈出視窗:新增課程(排課)*@
<div class="modal fade" id="modalCreateCourse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">新增課程<span></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="inpContactId">
                <div class="form-group">
                    <label>會員姓名</label>
                    <input type="hidden" id="inpMemberId">
                    <input type="text" class="form-control" id="inpMemberName" readonly>
                </div>
                <div class="form-group">
                    <label>課程名稱</label>
                    <input type="text" class="form-control" id="inpCourseName">
                </div>
                <div class="form-group">
                    <label>時段</label>
                    <div>
                        <select class="selTime1">
                            <option value="7">每周日</option>
                            <option value="1">每周一</option>
                            <option value="2">每周二</option>
                            <option value="3">每周三</option>
                            <option value="4">每周四</option>
                            <option value="5">每周五</option>
                            <option value="6">每周六</option>
                        </select>
                        <select class="selTime2">
                            <option value="9">09:00</option>
                            <option value="10">10:00</option>
                            <option value="11">11:00</option>
                            <option value="12">12:00</option>
                            <option value="13">13:00</option>
                            <option value="14">14:00</option>
                            <option value="15">15:00</option>
                            <option value="16">16:00</option>
                            <option value="17">17:00</option>
                            <option value="18">18:00</option>
                            <option value="19">19:00</option>
                            <option value="20">20:00</option>
                            <option value="21">21:00</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>堂數</label>
                    <input type="number" class="form-control" id="inpTotal">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="btnDemo">Demo</button>
                <button type="button" class="btn btn-success" id="btnSendCourse">送出</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        //select樣式
        $(".nice-select").remove();
        //SweetAlert Button樣式調整
        const SwalWithGreen = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-secondary'
            },
            buttonsStyling: false
        })

        //改變聯繫狀態
        function changeStatus() {
            theContactId = $(event.target).parents("tr").find(".tdBtn").find("input").val();
            theStatusNum = $(event.target).val();
            $.get("@Url.Content("~/Coach/changeContactStatus")", { FCoachContactId: theContactId, FStatusNumber: theStatusNum})
        }

        //點擊查看學員資料
        var theMemberId = 0;
        $(".aMemberName").on("click", showMember);
        function showMember() {
            theMemberId = $(event.target).next("input").val();
            $.get("@Url.Content("~/Coach/showMember")", { memberId: theMemberId }, function (member) {
                let html = "";//
                html += `<dt class="col-sm-3">會員編號</dt><dd class="col-sm-9">${member.fMemberId}</dd>`;
                html += `<dt class="col-sm-3">姓名</dt><dd class="col-sm-9">${member.memberName}</dd>`;
                html += `<dt class="col-sm-3">性別</dt><dd class="col-sm-9">${member.memberGender}</dd>`;
                html += `<dt class="col-sm-3">年齡</dt><dd class="col-sm-9">${member.memberAge}</dd>`;
                //TODO 改圖片路徑:member.memberPicturePath
                html += `<dt class="col-sm-3">相片</dt><dd class="col-sm-9"><div class="ddImg" style="background-image: url(/img/coach/coachImage/Alisa.jpg);"/></dd>`;
                html += `<dt class="col-sm-3">連絡電話</dt><dd class="col-sm-9">${member.memberPhone}</dd>`;
                html += `<dt class="col-sm-3">Email</dt><dd class="col-sm-9">${member.memberEmail}</dd>`;
                $("#dlMember").html(html);
            })
        }

        //彈出新增排課視窗
        var theMemberName;
        var selStatus;
        $(".btnCreateCourse").on("click", btnCreateCourseClick);
        function btnCreateCourseClick() {
            selStatus = $(event.target).parents("tr").find(".selStatus");
            theMemberName = $(event.target).parents("tr").find("a").text();
            theMemberId = $(event.target).parents("tr").find(".inpTheMemberID").val();
            theContactId = $(event.target).prev("input").val();
            thePreferTime = $(event.target).parents("tr").find(".inpPreferTime").val();
            $("#inpMemberName").val(theMemberName);
            $("#inpMemberId").val(theMemberId);
            $("#inpContactId").val(theContactId);
            $(".selTime1").val(thePreferTime.substr(0, 1));
            $(".selTime2").val(thePreferTime.substr(1, 2));
        }

        //新增課程(排課)
        $("#btnSendCourse").click(function () {
            
            if ($("#inpCourseName").val() == "" || $("#inpTotal").val() == "") {
                SwalWithGreen.fire(
                    '請勿空白',
                    '請檢查是否完整填寫課程名稱及堂數',
                    'error'
                )
            }
            else {
                SwalWithGreen.fire({
                    title: '確定要新增課程嗎?',
                    text: '確定新增後無法修改',
                    showDenyButton: false,
                    showCancelButton: true,
                    confirmButtonText: '確定',
                    cancelButtonText: `取消`,
                }).then((result) => {
                    /* Read more about isConfirmed, isDenied below */
                    if (result.isConfirmed) {
                        let time = `${$(".selTime1").val()}${$(".selTime2").val()}`;
                        $.post("@Url.Content("~/Coach/createCourse")", { FCoachContactId: $("#inpContactId").val(), FCourseName: $("#inpCourseName").val(), FCourseTotal: $("#inpTotal").val(), FAvailableTimeNum: time }, function () {
                            SwalWithGreen.fire('新增成功', '', 'success')
                            selStatus.val(52);
                            $("#modalCreateCourse").modal("hide");
                        })
                    }
                })
            }
        })

        //DEMO鍵
        $("#btnDemo").click(function () {
            $("#inpCourseName").val("體態雕塑初階");
            $("#inpTotal").val(8);
        });

        //依發送時間及聯絡狀態排序
        function loadContact() {
            let html = "";
            if ($(".thTime").children("i").hasClass("fa-caret-up")) {
                $.get("@Url.Content("~/Coach/loadContact")", { flag: 0, statusNum:$("#selStatus").val() }, function (contacts) {
                    $.each(contacts, function (index, value) {
                        html += `<tr><td>${index+1}</td>`;
                        html += `<td><a class="aMemberName" data-toggle="modal" data-target="#modalMember" href="" onclick="showMember();">${value.memberName}</a>`;
                        html += `<input class="inpTheMemberID" type="hidden" value="${value.fMemberId}" /></td>`;
                        html += `<td>${value.memberPhone}</td>`;
                        html += `<td>${value.availableTime} <input class="inpPreferTime" type = "hidden" value = "${value.fAvailableTimeNum}" /></td >`;
                        html += `<td>${value.strContactDate}</td>`;
                        html += `<td><select class="selStatus" onchange="changeStatus();">`;
                        if (value.fStatusNumber == 50) {
                            html += `<option value="50" selected>等待聯繫中</option>`;
                            html += `<option value="51">已聯繫，暫無課程</option>`;
                            html += `<option value="52">已聯繫，配對成功</option>`;
                        }
                        else if (value.fStatusNumber == 51) {
                            html += `<option value="50">等待聯繫中</option>`;
                            html += `<option value="51" selected>已聯繫，暫無課程</option>`;
                            html += `<option value="52">已聯繫，配對成功</option>`;
                        }
                        else if (value.fStatusNumber == 52) {
                            html += `<option value="50">等待聯繫中</option>`;
                            html += `<option value="51">已聯繫，暫無課程</option>`;
                            html += `<option value="52" selected>已聯繫，配對成功</option>`;
                        }
                        html += `</select></td><td class="tdBtn"><input type="hidden" value="${value.fCoachContactId}" />`;
                        html += `<button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse" onclick="btnCreateCourseClick();">排課</button>`;
                        html += `<button class="btn btn-secondary">聯繫</button></td></tr>`;
                    })
                    $("#tbdContact").html(html);
                })
            }
            else {
                $.get("@Url.Content("~/Coach/loadContact")", { flag: 1, statusNum: $("#selStatus").val() }, function (contacts) {
                    $.each(contacts, function (index, value) {
                        html += `<tr><td>${index + 1}</td>`;
                        html += `<td><a class="aMemberName" data-toggle="modal" data-target="#modalMember" href="" onclick="showMember();">${value.memberName}</a>`;
                        html += `<input class="inpTheMemberID" type="hidden" value="${value.fMemberId}" /></td>`;
                        html += `<td>${value.memberPhone}</td>`;
                        html += `<td>${value.availableTime} <input class="inpPreferTime" type = "hidden" value = "${value.fAvailableTimeNum}" /></td >`;
                        html += `<td>${value.strContactDate}</td>`;
                        html += `<td><select class="selStatus" onchange="changeStatus();">`;
                        if (value.fStatusNumber == 50) {
                            html += `<option value="50" selected>等待聯繫中</option>`;
                            html += `<option value="51">已聯繫，暫無課程</option>`;
                            html += `<option value="52">已聯繫，配對成功</option>`;
                        }
                        else if (value.fStatusNumber == 51) {
                            html += `<option value="50">等待聯繫中</option>`;
                            html += `<option value="51" selected>已聯繫，暫無課程</option>`;
                            html += `<option value="52">已聯繫，配對成功</option>`;
                        }
                        else if (value.fStatusNumber == 52) {
                            html += `<option value="50">等待聯繫中</option>`;
                            html += `<option value="51">已聯繫，暫無課程</option>`;
                            html += `<option value="52" selected>已聯繫，配對成功</option>`;
                        }
                        html += `</select></td><td class="tdBtn"><input type="hidden" value="${value.fCoachContactId}" />`;
                        html += `<button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse" onclick="btnCreateCourseClick();">排課</button>`;
                        html += `<button class="btn btn-secondary">聯繫</button> </td></tr>`;
                    })
                    $("#tbdContact").html(html);
                })
            }
        }
        $(".thTime").click(function () {
            if ($(".thTime").children("i").hasClass("fa-caret-down")) {
                $(".thTime").children("i").removeClass("fa-caret-down").addClass("fa-caret-up");
            }
            else {
                $(".thTime").children("i").removeClass("fa-caret-up").addClass("fa-caret-down");
            }
            loadContact();
        });
        $("#selStatus").on("change", loadContact);


    </script>
}