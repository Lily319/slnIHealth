@model List<prjIHealth.ViewModels.CContactViewModel>

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .divTopic {
            margin-bottom: 10px;
        }

        .divBar {
            width: 200px;
            height: 3px;
            margin-left: 30px;
            margin-bottom: 50px;
            background-color: #7FAD39;
        }

        .table {
            table-layout: fixed;
            word-break: break-all;
        }

        .thNo {
            width: 6%;
        }

        .thName {
            width: 10%;
        }

        .thPhone {
            width: 15%;
        }

        .thPreferTime {
            width: 14%;
        }

        .thTime {
            width: 18%;
        }

        .thStatus {
            width: 19%;
        }

        .tdBtn {
            width: 18%;
            text-align: right;
        }

            .tdBtn button:disabled {
                background-color: gray;
            }

        .btnView {
            border: none;
            background-color: #DFEACE;
            border-radius: 5px;
            height: 36px;
            vertical-align: bottom;
        }

            .btnView:hover {
                background-color: #C3CDB4;
            }

        .hiddenRow {
            padding: 0 !important;
        }


        .btn-success {
            background-color: #7fad39;
            border: none;
        }

        .btn-secondary {
            background-color: #A9B6A8;
            border: none;
        }

        .blog__btn {
            display: inline-block;
            font-size: 14px;
            color: #1c1c1c;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: 1px solid #b2b2b2;
            padding: 14px 20px 12px;
            border-radius: 25px;
        }

            .blog__btn:visited {
                color: #1c1c1c;
            }

            .blog__btn:hover {
                color: black;
                font-weight: 800;
            }

            .blog__btn:active {
                color: black;
                font-weight: 800;
            }

        .sidebar__item ul li a {
            border: dashed 2px #7fad39;
            border-top: none;
            border-left: none;
            border-right: none;
            padding-left: 1vw;
            margin-right: 8vw;
            margin-bottom: 1vh;
        }

        .selStatus {
            display: inline !important;
        }
        #selStatus {
            display: inline !important;
            color: #fff;
            background-color: #343a40;
            border-color: #454d55;
            font-weight: bold;
        }
        .selTime1, .selTime2 {
            display: inline !important;
            width: 48%;
        }

        .aMemberName {
            color: #212529;
        }

            .aMemberName:visited {
                color: #212529;
            }

            .aMemberName:hover {
                color: #7fad39;
            }

        .ddImg {
            width: 210px;
            height: 280px;
            background-size: contain;
            background-repeat: no-repeat;
        }
    </style>
}

@*banner大圖*@
<section class="breadcrumb-section set-bg" data-setbg="/img/Coach/Banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    @*h2內容請自行更換*@
                    <h2 class="reveal_t1">教練專區</h2>
                    <div class="breadcrumb__option reveal_t1">
                        <a href="~/Student/CoachMainPage">Home</a>
                        <span>Coach</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            @*教練專區左側導覽列*@
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>教練專區</h4>
                        <ul>
                            <li><a href="~/Coach/ManageResume">履歷管理</a></li>
                            <li><a href="~/Coach/RecruitmentList">招生紀錄</a></li>
                            <li><a href="~/Coach/TeachingList">教課列表</a></li>
                        </ul>
                        <br />
                        <a href="~/Member/Edit" class="blog__btn"><span class="arrow_right"></span>會員專區</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="divTopic reveal_t1"><h3><b>招生紀錄</b></h3></div>
                <div class="divBar reveal_r1"></div>
                <table class="table reveal_b1">
                    @*表格head*@
                    <thead class="thead-dark">
                        <tr>
                            <th class="thNo">
                                No.
                            </th>
                            <th class="thName">
                                學員
                            </th>
                            <th class="thPhone">
                                聯絡電話
                            </th>
                            <th class="thPreferTime">
                                偏好時段
                            </th>
                            <th class="thTime">
                                發送時間<i class="fa fa-caret-down" aria-hidden="true"></i>
                            </th>
                            <th class="thStatus">
                                <select id="selStatus">
                                    <option value="0" selected>所有聯繫狀態</option>
                                    <option value="50">等待聯繫中</option>
                                    <option value="52">已聯繫，配對成功</option>
                                    <option value="51">已聯繫，暫無課程</option>
                                </select>
                            </th>
                            <th class="tdBtn"></th>
                        </tr>
                    </thead>
                    @*招生紀錄*@
                    <tbody id="tbdContact">
                        @{
                            int count = 0;
                            foreach (var c in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <a class="aMemberName" data-toggle="modal" data-target="#modalMember" href="">@c.MemberName</a>
                                        <input class="inpTheMemberID" type="hidden" value="@c.FMemberId" />
                                    </td>
                                    <td>
                                        @c.MemberPhone
                                    </td>
                                    <td>
                                        @c.AvailableTime
                                        <input class="inpPreferTime" type="hidden" value="@c.FAvailableTimeNum" />
                                    </td>
                                    <td>
                                        @c.StrContactDate
                                    </td>
                                    <td>
                                        <select class="selStatus" onchange="changeStatus();">
                                            @{
                                                if (c.FStatusNumber == 50)
                                                {
                                                    <option value="50" selected>等待聯繫中</option>
                                                    <option value="51">已聯繫，暫無課程</option>
                                                    <option value="52">已聯繫，配對成功</option>
                                                }
                                                else if (c.FStatusNumber == 51)
                                                {
                                                    <option value="50">等待聯繫中</option>
                                                    <option value="51" selected>已聯繫，暫無課程</option>
                                                    <option value="52">已聯繫，配對成功</option>
                                                }
                                                else if (c.FStatusNumber == 52)
                                                {
                                                    <option value="50">等待聯繫中</option>
                                                    <option value="51">已聯繫，暫無課程</option>
                                                    <option value="52" selected>已聯繫，配對成功</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td class="tdBtn">
                                        <input type="hidden" value="@c.FCoachContactId" />
                                        <button class="btn btn-success btnCreateCourse" data-toggle="modal" data-target="#modalCreateCourse">排課</button>
                                        <button class="btn btn-secondary">聯繫</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@*彈出視窗:會員資料*@
